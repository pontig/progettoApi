    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/a.out",
            "environment": [
                {
                    "name": "config",
                    "value": "Debug"
                }
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
            "preLaunchTask": "cppbuild",
            "args": [
                "<",
                "input.txt",
                ">",
                "output.txt"
            ],
            
        },
        
    ]
}